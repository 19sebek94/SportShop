@model ProductListViewModel
@using SportShop.Infrastructure

<div class="row">
    <div class="col-3" style="margin-top:20px;">
        @await Component.InvokeAsync("CategoryMenu")
    </div>


    <div class="row col-9">

        @foreach (var p in Model.Products)
        {
            @Html.Partial("ProductCard", p);
        }
    </div>
</div>